# ============================================
# APLICAÇÃO NEXT.JS
# ============================================

# URL de conexão com o banco de dados PostgreSQL
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=postgresql://postgres:docker@localhost:5432/cobrancas_db

# Secret usado pelo NextAuth para assinar tokens JWT
# Gere um valor aleatório seguro (ex: openssl rand -base64 32)
AUTH_SECRET=

# URL base da aplicação (usado pelo NextAuth)
# Em desenvolvimento: http://localhost:3000
# Em produção: https://seu-dominio.com
NEXTAUTH_URL=http://localhost:3000

# ============================================
# DOCKER COMPOSE - POSTGRESQL
# ============================================

# Usuário do PostgreSQL
POSTGRES_USER=postgres

# Senha do PostgreSQL
POSTGRES_PASSWORD=docker

# Nome do banco de dados principal
POSTGRES_DB=cobrancas_db

# Porta do PostgreSQL (padrão: 5432)
POSTGRES_PORT=5432

# ============================================
# DOCKER COMPOSE - REDIS
# ============================================

# Porta do Redis (padrão: 6379)
REDIS_PORT=6379

# ============================================
# DOCKER COMPOSE - N8N
# ============================================

# Porta do n8n (padrão: 5678)
N8N_PORT=5678

# Nome do banco de dados do n8n
N8N_DB_NAME=n8n

# Schema do banco de dados do n8n
N8N_DB_SCHEMA=public

# ============================================
# DOCKER COMPOSE - EVOLUTION API
# ============================================

# Porta da Evolution API (padrão: 8080)
EVOLUTION_PORT=8080

# URL do servidor Evolution API
EVOLUTION_SERVER_URL=http://localhost:8080

# Cliente da sessão do WhatsApp
EVOLUTION_SESSION_CLIENT=EvolutionAPI

# Nome da sessão do WhatsApp
EVOLUTION_SESSION_NAME=Chrome

# Intervalo de limpeza do store (em segundos, padrão: 7200 = 2 horas)
EVOLUTION_CLEAN_INTERVAL=7200

# URI de conexão com Redis para cache
EVOLUTION_REDIS_URI=redis://redis:6379

# Prefixo das chaves no Redis
EVOLUTION_REDIS_PREFIX=evolution

# TTL das chaves no Redis (em segundos, padrão: 604800 = 7 dias)
EVOLUTION_REDIS_TTL=604800

# Salvar instâncias no Redis
EVOLUTION_REDIS_SAVE_INSTANCES=true

# Chave de autenticação da API Evolution (IMPORTANTE: altere em produção!)
EVOLUTION_API_KEY=change_me

# Limite de tentativas de QR Code
EVOLUTION_QRCODE_LIMIT=30

# Habilitar integração com Chatwoot
EVOLUTION_CHATWOOT_ENABLED=true

# Nome do banco de dados da Evolution API
EVOLUTION_DB_NAME=evolution

# Habilitar webhooks globais
EVOLUTION_WEBHOOK_ENABLED=true

# URL do webhook (descomente e configure se necessário)
# EVOLUTION_WEBHOOK_URL=http://localhost:4444/api/webhooks/evolution

# Nível de log (ERROR, WARN, INFO, DEBUG)
EVOLUTION_LOG_LEVEL=ERROR

# Nível de log do Baileys (error, warn, info, debug)
EVOLUTION_LOG_BAILEYS=error

# ============================================
# INTEGRAÇÃO E SEED
# ============================================

# Token de API para integração com n8n
# Este token será criado automaticamente no seed se fornecido
# Gere um valor aleatório seguro (ex: openssl rand -hex 32)
N8N_API_TOKEN=

# Nome do token de API (opcional, padrão: "n8n-default")
N8N_API_TOKEN_NAME=n8n-default
