generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  nome      String
  email     String     @unique
  password  String
  role      Role       @default(USER)
  isActive  Boolean    @default(true)
  mustChangePassword Boolean @default(false)
  passwordChangedAt DateTime?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  clients   Client[]
  apiTokens ApiToken[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model Client {
  id          String     @id @default(uuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  nome        String
  fone        String //@unique
  vencimento  Int        @default(1)
  valor       Float      @default(0)
  ativo       Boolean    @default(true)
  observacoes String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  cobrancas   Cobranca[]

  @@map("clients")
}

enum Status {
  PENDENTE
  PAGO
  CANCELADO
  ATRASADO
}

model Cobranca {
  id              String    @id @default(uuid())
  clientId        String
  client          Client    @relation(fields: [clientId], references: [id])
  valor           Float
  valorDivida     Float
  valorPago       Float?
  vencimento      DateTime
  dataPagamento   DateTime?
  dataVencimento  DateTime
  status          Status    @default(PENDENTE)
  observacoes     String?
  messageAttempts Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("cobrancas")
}

model ApiToken {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  name       String
  tokenHash  String
  expiresAt  DateTime?
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())

  @@index([userId])
  @@map("api_tokens")
}
